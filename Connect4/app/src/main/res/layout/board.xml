<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout07"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/BoardPadding"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,6:7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <include
            android:id="@+id/row0"
            style="@style/column"
            layout="@layout/column"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/row1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTag="0"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/row1"
            style="@style/column"
            layout="@layout/column"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/row2"
            app:layout_constraintStart_toEndOf="@id/row0"
            app:layout_constraintTag="1"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/row2"
            style="@style/column"
            layout="@layout/column"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/row3"
            app:layout_constraintStart_toEndOf="@id/row1"
            app:layout_constraintTag="2"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/row3"
            style="@style/column"
            layout="@layout/column"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/row4"
            app:layout_constraintStart_toEndOf="@id/row2"
            app:layout_constraintTag="3"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/row4"
            style="@style/column"
            layout="@layout/column"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/row5"
            app:layout_constraintStart_toEndOf="@id/row3"
            app:layout_constraintTag="4"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/row5"
            style="@style/column"
            layout="@layout/column"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/row6"
            app:layout_constraintStart_toEndOf="@id/row4"
            app:layout_constraintTag="5"
            app:layout_constraintTop_toTopOf="parent" />


        <include
            android:id="@+id/row6"
            style="@style/column"
            layout="@layout/column"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/row5"
            app:layout_constraintTag="6"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>